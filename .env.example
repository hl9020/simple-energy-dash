# Smart Energy Dashboard Configuration

# Language (en, de)
APP_LANG=en

# Electricity price per kWh (all-in)
PRICE_KWH=0.226
CURRENCY_SYMBOL=â‚¬

# MQTT Broker
MQTT_HOST=127.0.0.1
MQTT_PORT=1883
MQTT_TOPIC=sensor

# OBIS codes from smartmeter payload (SML protocol)
# 1.7.0 = current power (W), 1.8.0 = total energy (Wh)
OBIS_POWER=1.7.0
OBIS_ENERGY=1.8.0
# Energy value divisor (1000 = Wh->kWh, 1 = already kWh)
OBIS_ENERGY_DIVISOR=1000

# Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# Database (relative to project root or absolute path)
DB_PATH=instance/energy.db

# Baseload detection window (hour range, 24h format)
BASELOAD_HOUR_START=2
BASELOAD_HOUR_END=5
